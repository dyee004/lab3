#include <avr/io.h>
#ifdef _SIMULATE_
#include "simAVRHeader.h"
#endif

int main(void) {
  	DDRA = 0x00; PORTA = 0xFF;
	DDRB = 0x00; PORTB = 0xFF;
	DDRC = 0xFF; PORTC = 0x00;
	unsigned char tmpA = 0;
	unsigned char tmpB = 0;
	unsigned char incrementor = 0;
	unsigned char i = 0;
   
    while (1) 
    {
      tmpA = PINA;
      tmpB = 0x40;
      if((tmpA <=2)&&(tmpA>0)){
	tmpB = 0x60;
      }
      else if((tmpA > 2)&&(tmpA <=4)){
	tmpB = 0x70;
      }
      else if((tmpA > 4)&&(tmpA <=6)){
	tmpB = 0x38;
      }
      else if((tmpA > 6)&&(tmpA <=9)){
	  tmpB = 0x3C;
      }
      else if((tmpA > 9)&&(tmpA <= 12)){
	    tmpB = 0x3E;
      }
      else if((tmpA > 12)&&(tmpA <=15)){
	  tmpB = 0x3F;
      }
	return 1;
}
